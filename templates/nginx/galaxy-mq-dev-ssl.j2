server {

    listen 443 ssl;
    listen [::]:443 ssl;

    server_name {{ mq_domain }};

    ssl_certificate_key /etc/ssl/private/snakeoil_privatekey.pem;
    ssl_certificate /etc/ssl/certs/snakeoil_cert.pem;

    location /rabbit/ {
        proxy_pass                 http://127.0.0.1:15672/;
    }
}